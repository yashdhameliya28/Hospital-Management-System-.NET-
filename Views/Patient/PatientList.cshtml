@model DataTable
@using System.Data


<div class="d-flex justify-content-between mb-4">
    <div class="h4">Patient List</div>
    <div class=""> <span class="text-primary">Hospital Management </span> > <span class="text-primary">Patient</span> > Patient List</div>
</div>

<div class="mb-4">

    @if (TempData["Sucessfully"] != null)
    {
        <div class="alert alert-success"> @TempData["Sucessfully"]</div>
    }
    @if (TempData["Unsucessfully"] != null)
    {
        <div class="alert alert-danger"> @TempData["Unsucessfully"]</div>
    }
</div>

<div class="card p-3">
    <div class="d-flex justify-content-end mb-2">
        <button type="button" class="btn btn-outline-primary"> <i class="far fa-add"></i> Patient</button>
    </div>
    <table class="table mt-2 p-2">
        <thead>
            <tr class="table-active">
                <th scope="col">Name</th>
                <th scope="col">Gender</th>
                <th scope="col">Email</th>
                <th scope="col">Phone</th>
                <th scope="col">City</th>
                <th scope="col">State</th>
                <th scope="col">Action</th> 
            </tr>
        </thead>
        <tbody>
            @foreach (DataRow row in Model.Rows)
            {
                <tr>
                    <td>@row["PatientName"]</td>
                    <td>@row["Gender"]</td>
                    <td>@row["Email"]</td>
                    <td>@row["Phone"]</td>
                    <td>@row["City"]</td>
                    <td>@row["State"]</td>
                    <td>
                        <a asp-controller="Patient" asp-action="PatientUpdate" asp-route-PatientID="@row["PatientID"]" class="btn btn-outline-primary">Edit</a>
                        <a asp-controller="Patient" asp-action="PatientDelete" asp-route-PatientID="@row["PatientID"]" class="btn btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
