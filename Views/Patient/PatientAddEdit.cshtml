@model HMS.Models.PatientModel

<div class="d-flex justify-content-between mb-4">
    <div class="h4">Patient Information</div>
    <div>
        <span class="text-primary">Hospital Management</span> >
        <span class="text-primary">Patient</span> >
    </div>
</div>

<div class="card p-3">
    <form method="post" asp-controller="Patient" asp-action="PatientSave">
        <input type="hidden" name="PatientID" asp-for="PatientID" />

        <label for="PatientName">Name</label>
        <input type="text" id="PatientName" asp-for="PatientName" class="form-control mb-2" />
        <div class="mb-2">
            <span asp-validation-for="PatientName" class="text-danger mb-2"> </span>
        </div>

        <label for="DateOfBirth">Date of Birth</label>
        <input type="date" id="DateOfBirth" asp-for="DateOfBirth" class="form-control mb-2" required />
        <div class="mb-2">
            <span asp-validation-for="DateOfBirth" class="text-danger mb-2"> </span>
        </div>

        <label for="Gender">Gender</label>
        <select id="Gender" class="form-control mb-2" asp-for="Gender" required>
            <option value="">-- Select Gender --</option>
            <option value="Male">Male</option>
            <option value="Female">Female</option>
            <option value="Other">Other</option>
        </select>
        <div class="mb-2">

            <span asp-validation-for="Gender" class="text-danger mb-2"> </span>
        </div>

        <label for="Email">Email</label>
        <input type="email" id="Email" class="form-control mb-2" asp-for="Email" required />
        <div class="mb-2">
            <span asp-validation-for="Email" class="text-danger mb-2"> </span>

        </div>

        <label for="Phone">Phone</label>
        <input type="text" id="Phone" asp-for="Phone" name="Phone" class="form-control mb-2" required />
        <div class="mb-2">

            <span asp-validation-for="Phone" class="text-danger mb-2"> </span>
        </div>

        <label for="City">City</label>
        <input type="text" id="City" name="City" asp-for="City" asp-for="PatientID" class="form-control mb-2" required />
        <div class="mb-2">

            <span asp-validation-for="City" class="text-danger mb-2"> </span>
        </div>

        <label for="Address">Address</label>
        <input type="text" id="Address" name="Address" asp-for="Address" class="form-control mb-2" required />
        <div class="mb-2">
            <span asp-validation-for="Address" class="text-danger mb-2"> </span>

        </div>

        <label for="State">State</label>
        <select id="State" name="State" class="form-control mb-2" asp-for="State" required>
            <option value="">-- Select State --</option>
            <option value="Gujarat">Gujarat</option>
            <option value="Maharashtra">Maharashtra</option>
            <option value="Rajasthan">Rajasthan</option>
            <option value="Delhi">Delhi</option>
            <option value="Karnataka">Karnataka</option>
        </select>
        <div class="mb-2">
            <span asp-validation-for="State" class="text-danger mb-2"> </span>

        </div>

        <div class="col-auto mb-3">
            <label class="mb-2" for="User Name">User Name</label>
            <select class="form-select" id="autoSizingSelect" asp-for="UserID">
                <option selected>--Select User Name-- </option>
                <option value="6">6</option>
                <option value="7">7</option>
                <option value="8">8</option>
            </select>
        </div>
        <div class="mb-2">
            <span asp-validation-for="UserName" class="text-danger mb-2"> </span>
        </div>

        <button type="submit" class="btn btn-primary">
            @(Model.PatientID > 0 ? "Update Patient" : "Save Patient")
        </button>
        <a href="@Url.Action("PatientList", "Patient")" class="btn btn-secondary mt-2">Cancel</a>
    </form>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}