@model HMS.Models.DepartmentModel

<div class="d-flex justify-content-between mb-4">
    <div class="h4">Department Information</div>
    <div>
        <span class="text-primary">Hospital Management</span> >
        <span class="text-primary">Department</span> >
    </div>
</div>

<div class="card p-3">
    <form method="post" asp-controller="Department" asp-action="DepartmentSave">
        <input type="hidden" name="DepartmentID" asp-for="DepartmentID" />

        <label for="DepartmentName">Department Name</label>
        <input type="text" id="DepartmentName" asp-for="DepartmentName" class="form-control mb-2" />
        <div class="mb-2">
            <span asp-validation-for="DepartmentName" class="text-danger mb-2"> </span>
        </div>

        <label for="Description">Description</label>
        <input type="text" id="Description" class="form-control mb-2" asp-for="Description" required />
        <div class="mb-2">
            <span asp-validation-for="Description" class="text-danger mb-2"> </span>

        </div>

        <div class="col-auto mb-3">
            <label class="mb-2" for="User Name">User ID</label>
            <select class="form-select" id="autoSizingSelect" asp-for="UserID">
                <option selected>--Select User ID-- </option>
                <option value="6">6</option>
                <option value="7">7</option>
                <option value="8">8</option>
            </select>
        </div>
        <div class="mb-2">
            <span asp-validation-for="UserID" class="text-danger mb-2"> </span>

        </div>

        <button type="submit" class="btn btn-primary">
            @(Model.DepartmentID > 0 ? "Update Department" : "Save Department")
        </button>
        <a href="@Url.Action("DepartmentList", "Department")" class="btn btn-secondary mt-2">Cancel</a>
    </form>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}