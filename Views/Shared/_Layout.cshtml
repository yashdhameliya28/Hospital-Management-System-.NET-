<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Admin Dashboard</title>

    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid">
        <div class="row min-vh-100">

            
            <div class="col-12 col-md-3 col-lg-2 bg-light border-end p-3">
                <h4 class="text-primary fw-bold mb-4">HMS</h4>

                <div class="nav flex-column">
                    <a href="#" class="nav-link active bg-white border rounded mb-1">
                        <i class="fa fa-house me-2"></i> Admin Dashboard
                    </a>

             
                    <a class="nav-link mb-1" data-bs-toggle="collapse" href="#deptMenu" role="button">
                        <i class="fa fa-building me-2"></i> Department
                    </a>
                    <div class="collapse ps-3" id="deptMenu">
                        <a asp-controller="Department" asp-action="DepartmentAddEdit" class="nav-link">Add Department</a>
                        <a asp-controller="Department" asp-action="DepartmentList" class="nav-link">Manage Department</a>
                    </div>

                    <!-- Doctor -->
                    <a class="nav-link mb-1" data-bs-toggle="collapse" href="#doctorMenu" role="button">
                        <i class="fa fa-user-doctor me-2"></i> Doctor
                    </a>
                    <div class="collapse ps-3" id="doctorMenu">
                        <a asp-controller="Doctor" asp-action="DoctorAddEdit" class="nav-link">Add Doctor</a>
                        <a asp-controller="Doctor" asp-action="DoctorList" class="nav-link">Manage Doctor</a>
                    </div>

                    <!-- Patient -->
                    <a class="nav-link mb-1" data-bs-toggle="collapse" href="#patientMenu" role="button">
                        <i class="fa fa-user me-2"></i> Patient
                    </a>
                    <div class="collapse ps-3" id="patientMenu">
                        <a asp-controller="Patient" asp-action="PatientAddEdit" class="nav-link">Add Patient</a>
                        <a asp-controller="Patient" asp-action="PatientList" class="nav-link">Manage Patient</a>
                    </div>

                    <!-- Appointment -->
                    <a class="nav-link mb-1" data-bs-toggle="collapse" href="#appointmentMenu" role="button">
                        <i class="fa fa-calendar-check me-2"></i> Appointment
                    </a>
                    <div class="collapse ps-3" id="appointmentMenu">
                        <a asp-controller="Appointment" asp-action="AppointmentAddEdit" class="nav-link">Add Appointment</a>
                        <a asp-controller="Appointment" asp-action="AppointmentList" class="nav-link">Manage Appointment</a>
                    </div>

                    <!-- Doctor-Department -->
                    <a class="nav-link mb-1" data-bs-toggle="collapse" href="#docDeptMenu" role="button">
                        <i class="fa fa-stethoscope me-2"></i> Doctor-Department
                    </a>
                    <div class="collapse ps-3" id="docDeptMenu">
                        <a asp-controller="DoctorDepartment" asp-action="DoctorDepartmentAddEdit" class="nav-link">Add DoctorDepartment</a>
                        <a asp-controller="DoctorDepartment" asp-action="DoctorDepartmentList" class="nav-link">Manage DoctorDepartment</a>
                    </div>
                </div>
            </div>

            <!-- Main Content -->
            <main class="col-12 col-md-9 col-lg-10 p-4">
                @RenderBody()
            </main>

        </div>
    </div>

 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
